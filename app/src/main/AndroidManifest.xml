<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vetandaid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".Start"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VetAndAid">
        <activity android:name=".MessageActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ConfirmAppointment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Log_Sign.VetFirstSign"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClinicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MedicalHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddMedicalHistory"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PetProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VetProfile"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VetAndAid.NoActionBar" />
        <activity
            android:name=".ClientProfile"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VetAndAid.NoActionBar" />
        <activity
            android:name=".RecyclerViews.Breeds"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecyclerViews.ScheduleRecView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddPet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Log_Sign.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VetAndAid.NoActionBar" />
        <activity
            android:name=".Log_Sign.LogInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Log_Sign.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>