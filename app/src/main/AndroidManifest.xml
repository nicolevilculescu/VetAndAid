<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vetandaid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".Start"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VetAndAid">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".ConfirmAppointment" />
        <activity android:name=".Log_Sign.VetFirstSign" />
        <activity android:name=".ClinicActivity" />
        <activity android:name=".MedicalHistoryActivity" />
        <activity android:name=".AddMedicalHistory" />
        <activity android:name=".PetProfile" />
        <activity
            android:name=".ClientProfile"
            android:label="@string/title_activity_client_profile"
            android:theme="@style/Theme.VetAndAid.NoActionBar" />
        <activity
            android:name=".RecyclerViews.Breeds"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecyclerViews.ScheduleRecView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddPet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Log_Sign.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VetAndAid.NoActionBar" />
        <activity
            android:name=".Log_Sign.LogInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Log_Sign.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>